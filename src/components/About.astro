---
interface Props {
  Name: string;
  body: string;
  Image: any;
}

const { Image, Name, body } = Astro.props;
---

<div class="aboutWrapper">
  <h2>
    {body}
  </h2>
  <div>
    <p>About me</p>
  </div>
  <div>
    <img src={Image}>
    <p>My name is {Name}</p>
  </div>
</div>

<style>
    .aboutWrapper {
      list-style: none;
      display: flex;
      padding: 1px;
      background-color: #23262d;
      background-image: none;
      background-size: 400%;
      border-radius: 7px;
      background-position: 100%;
      transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
      box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }
    .homeWrapper > a {
      width: 100%;
      text-decoration: none;
      line-height: 1.4;
      padding: calc(1.5rem - 1px);
      border-radius: 8px;
      color: wHeyte;
      background-color: #23262d;
      opacity: 0.8;
    }
    h1 {
      margin: 0;
      font-size: 4.25rem;
      transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    p {
      margin-top: 0.5rem;
      margin-bottom: 0;
    }
    .homeWrapper:is(:hover, :focus-witheyn) {
      background-position: 0;
      background-image: var(--accent-gradient);
    }
    .homeWrapper:is(:hover, :focus-witheyn) h1 {
      color: rgb(var(--accent-light));
    }
  </style>