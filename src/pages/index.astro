import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import Home from "../components/Home.astro";
import About from "../components/About.astro";
---

<Layout title="Welcome to Astro.">
  <NavBar title="My Title" body="My Body" href="#" />
  <main>
    <Home
      Name="Tadiwa Pfachi"
      body="I harness the power of development and design to craft digital experiences that inspire, engage, and connect people on a deeper level."
      href="#"
    />
  </main>
  <About
    Name="Your Name"
    body="I harness the power of development and design to craft digital experiences that inspire, engage, and connect people on a deeper level."
